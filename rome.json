{
  "$schema": "./node_modules/rome/configuration_schema.json",
  "organizeImports": {
    "enabled": true,
    "ignore": []
  },
  "files": {
    "maxSize": 1048576,
    "ignore": []
  },
  "linter": {
    "enabled": true,
    "ignore": [],
    "rules": {
      "recommended": true
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "lineWidth": 100,
    "indentSize": 2,
    "formatWithErrors": false,
    "ignore": []
  },
  "javascript": {
    "globals": [],
    "formatter": {
      "quoteStyle": "single",
      "semicolons": "asNeeded",
      "quoteProperties": "asNeeded",
      "trailingComma": "none"
    }
  }
}
